@{
}

<article>
    <header>
        <partial name="_BlogAuthorInfoPartial" data="@Model" />
        <h2>@Model.Title</h2>
        @foreach (var tag in Model.Tags)
        {
            <span class="blog-post-tag">@tag</span>
        }
    </header>
    <section id="Blog-Post-Content">
        @Html.Raw(@Model.Content)
    </section>
</article>